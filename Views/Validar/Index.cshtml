@model CampIAFCJ.Models.ValidarFormulario

@{
    ViewBag.Title = "Index";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <br /><br /><br /><br />
    <div class="form-horizontal">
        <h1>Formulario de registro</h1>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Nombre, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Nombre, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.NumeroIglesia, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.NumeroIglesia, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.NumeroIglesia, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Edad, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Edad, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Edad, "", new { @class = "text-danger" })
            </div>
        </div>

        <!--  añadir RadioButton-->
        <div class="form-group">
            @Html.LabelFor(model => model.Genero, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.Label("Hombre")
                @Html.RadioButtonFor(model => model.Genero, "H")
                @Html.Label("Mujer")
                @Html.RadioButtonFor(model => model.Genero, "M")
                @Html.ValidationMessageFor(model => model.Genero, "", new { @class = "text-danger" })
            </div>
        </div>

        <!--  añadir RadioButton-->
        <div class="form-group">
            @Html.LabelFor(model => model.EstadoCivil, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.Label("Casado(a)")
                @Html.RadioButtonFor(model => model.EstadoCivil, "C")
                @Html.Label("Soltero(a)")
                @Html.RadioButtonFor(model => model.EstadoCivil, "S")
                @Html.ValidationMessageFor(model => model.EstadoCivil, "", new { @class = "text-danger" })
            </div>
        </div>

        <!--  añadir RadioButton-->
        <div class="form-group">
            @Html.LabelFor(model => model.Camiseta, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.Label("Si")
                @Html.RadioButtonFor(model => model.Camiseta, "S")
                @Html.Label("No")
                @Html.RadioButtonFor(model => model.Camiseta, "N")
                @Html.ValidationMessageFor(model => model.Camiseta, "", new { @class = "text-danger" })
            </div>
        </div>

        <!--  añadir RadioButton-->
        <div class="form-group">
            @Html.LabelFor(model => model.Talla, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.Label("Chica")
                @Html.RadioButtonFor(model => model.Talla, "C")
                @Html.Label("Mediana")
                @Html.RadioButtonFor(model => model.Talla, "M")
                @Html.Label("Grande")
                @Html.RadioButtonFor(model => model.Talla, "G")
                @Html.ValidationMessageFor(model => model.Talla, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.CorreoElectronico, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.CorreoElectronico, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.CorreoElectronico, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Enviar" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
